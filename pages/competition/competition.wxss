/* pages/competition/competition.wxss */
page {
  padding-bottom: 4rpx;
}
.list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.competition {
  width: 320rpx;
  min-height: 500rpx;
  display: flex;
  flex-direction: column;
  background-color: #fff;
  border-radius: 20rpx;
  margin-bottom: 40rpx;
  position: relative;
}
.img {
  width: 320rpx;
  height: 320rpx;
  border-radius: 20rpx 20rpx 0 0;
}
.desc {
  padding: 20rpx;
}
.title {
  font-size: 32rpx;
  color: #1B1B1B;
  font-weight: bold;
}
.date {
  color: #1B1B1B;
  font-weight: 400;
  font-size: 24rpx;
}
.price {
  color: #0024CD;
  font-weight: bold;
  font-size: 28rpx;
  margin-bottom: 10rpx;
}
.address {
  color: #7E7E7E;
  font-weight: 400;
  font-size: 24rpx;
}
.tag {
  position: absolute;
  left: 12rpx;
  top: 10rpx;
  width: 80rpx;
  height: 28rpx;
  border-radius: 8px;
  font-size: 16rpx;
  font-weight: bold;
  color: #FFFFFF;
  text-align: center;
}